{% extends 'base.html.twig' %}

{% block title %}Concert index{% endblock %}

{% block body %}
    <h1>Concert index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>StartAt</th>
                <th>EndAt</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concert in concerts %}
            <tr>
                <td>{{ concert.id }}</td>
                <td>{{ concert.Name }}</td>
                <td>{{ concert.Description }}</td>
                <td>{{ concert.StartAt ? concert.StartAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ concert.EndAt ? concert.EndAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ concert.Type }}</td>
                <td>
                    <a href="{{ path('app_concert_show', {'id': concert.id}) }}">show</a>
                    <a href="{{ path('app_concert_edit', {'id': concert.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_concert_new') }}">Create new</a>
{% endblock %}
